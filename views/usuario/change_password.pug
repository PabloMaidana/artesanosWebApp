doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Cambiar Contraseña – Artesanos.com
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    nav.navbar.navbar-light.bg-light
      .container
        a.navbar-brand(href="/") Artesanos.com
        ul.navbar-nav.ms-auto.mb-0
          li.nav-item
            a.nav-link(href="/usuario/logout") Cerrar sesión

    .container.mt-5
      h2.mb-4 Cambiar Contraseña
      if typeof error !== 'undefined'
        .alert.alert-danger #{error}
      form(action="/usuario/change-password" method="POST")
        .mb-3
          label.form-label(for="actual") Contraseña actual
          input#actual.form-control(type="password" name="actual" required placeholder="Introduce tu contraseña actual")
        .mb-3
          label.form-label(for="nueva") Nueva contraseña
          input#nueva.form-control(type="password" name="nueva" required placeholder="Introduce la nueva contraseña")
        .mb-3
          label.form-label(for="confirm") Confirmar nueva contraseña
          input#confirm.form-control(type="password" name="confirm" required placeholder="Repite la nueva contraseña")
        button.btn.btn-primary(type="submit") Cambiar contraseña
        a.btn.btn-secondary.ms-3(href="/usuario/perfil") Cancelar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
